<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.miniproyectoprogramacionavanzada.controllers.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxControlador</servlet-name>
        <servlet-class>com.miniproyectoprogramacionavanzada.controllers.AjaxControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestXML</servlet-name>
        <servlet-class>com.miniproyectoprogramacionavanzada.controllers.RestXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestJSON</servlet-name>
        <servlet-class>com.miniproyectoprogramacionavanzada.controllers.RestJSON</servlet-class>
    </servlet>
    <servlet> 
      <servlet-name>Jersey RESTful Application</servlet-name> 
      <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class> 
      <init-param> 
         <param-name>jersey.config.server.provider.packages</param-name> 
         <param-value>com.miniproyectoprogramacionavanzada.models</param-value> 
      </init-param> 
   </servlet> 
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxControlador</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestXML</servlet-name>
        <url-pattern>/RestXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestJSON</servlet-name>
        <url-pattern>/RestJSON</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Jersey RESTful Application</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/error.jsp</location>
    </error-page>
</web-app>
